<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.chatapp.ProfileActivity"
    android:background="@color/common_google_signin_btn_text_light_pressed">

    <!--include layout="@layout/app_bar_layout" android:id="@+id/ProfileToolBar"/-->

    <ImageView
        app:srcCompat="@drawable/avatar"
        android:id="@+id/ProfileImage"
        android:layout_alignParentStart="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProfileUserName"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_below="@+id/ProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Current user status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfileUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/ProfileStatus"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Total Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/TotalFriends"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_below="@+id/ProfileStatus"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Send Friend Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SendRequestBtn"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:padding="15dp"
        android:layout_below="@+id/TotalFriends"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <Button
        android:text="Decline Friend Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DeclineBtn"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:padding="15dp"
        android:layout_below="@+id/SendRequestBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
